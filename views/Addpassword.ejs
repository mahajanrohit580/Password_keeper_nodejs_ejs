<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('header'); %>
  </head>
  <body>
           <center><h1>Password Management System</h1></center>
    <h1><%= mgs %></h1><button><a href="/logout">Logout</a></button> <b><%= useris %></b>
    <div class="container">
        <form method="POST" action="/addpassworddata">
        <% if(addpaser !==''){ %>
          <%= addpaser %>
          <% } %>
          <div class="col-md-9">
            <select class="form-control" name="pass_cat">
                <option value="">Choose Password Category</option>
                <% if(adddata.length > 0){
                  adddata.forEach(function(row){
                 %>
                <option value="<%= row.catagoryname %>"><%= row.catagoryname %></option>
                <%  }) } %>
               </select>
         </div>
         <div class="form-group">
          <div class="col-md-9">
              <input type="text" class="form-control" name="projectname" rows="5" placeholder="Enter Project Name" required>
          </div>  <label for="username" class="col-md-3 control-label">Project Name</label>
      </div>   
          <div class="form-group">
            <div class="col-md-9">
                <textarea class="form-control" id="editor" name="pass_details" rows="5" placeholder="Enter Your Password Details" required></textarea>
            </div>  <label for="username" class="col-md-3 control-label">Password Details</label>
        </div>   
         <br>
          <button type="submit"  class="btn btn-success">ADD Password Deatil</button>
          <p>Back to : <a href="/viewdetails">View Details</a></p>
        </form>
      </div> <!-- /container -->
      <script>
        CKEDITOR.replace( 'editor' );
    </script> 
    <%- include('footer'); %>
  </body>
</html>
